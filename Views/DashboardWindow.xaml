<Window x:Class="SneakerBackOffice.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to the Dashboard!" FontSize="24"
                   HorizontalAlignment="Center" Grid.Row="0"/>

        <DataGrid Name="dataGridSneakers" Grid.Row="1"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="20"/>

        <Button Content="Refresh" Width="120" Height="40"
                Grid.Row="2" HorizontalAlignment="Center"
                Click="RefreshData"/>
    </Grid>
</Window>
